{
  "name": "my-remix-app",
  "type": "module",
  "private": true,
  "sideEffects": false,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "remix vite:build",
    "dev": "remix vite:dev",
    "lint": "eslint --ignore-path .gitignore --cache --cache-location ./node_modules/.cache/eslint .",
    "lint:fix": "eslint . --fix",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc",
    "db:create": "dotenv -e .env.development -- npx prisma db push",
    "db:create:test": "dotenv -e .env.test -- npx prisma db push",
    "db:migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "db:migrate:test": "dotenv -e .env.test -- npx prisma migrate deploy",
    "test": "dotenv -e .env.test -- vitest"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@remix-run/node": "^2.14.0",
    "@remix-run/react": "^2.14.0",
    "@remix-run/serve": "^2.14.0",
    "isbot": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.9.2",
    "@remix-run/dev": "^2.14.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.19",
    "dotenv-cli": "^7.4.3",
    "eslint": "^9.15.0",
    "postcss": "^8.4.38",
    "prisma": "^5.22.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.1.6",
    "vite": "^5.1.0",
    "vite-tsconfig-paths": "^4.2.1",
    "vitest": "^2.1.5"
  }
}
